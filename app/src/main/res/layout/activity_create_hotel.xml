<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hotel Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/editText_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter hotel name"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/editText_hotel_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter hotel address"
            android:inputType="textPostalAddress"
            android:minHeight="48dp" />

        <!-- Location (latitude & longitude) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location (Latitude and Longitude)"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/editText_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitude"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editText_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitude"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <!-- Max Occupancy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Occupancy"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/editText_max_occupancy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter maximum occupancy"
            android:inputType="number"
            android:minHeight="48dp" />

        <!-- Rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/editText_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter rating"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <!-- Upload Image Button -->
        <Button
            android:id="@+id/btn_upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Image" />

        <ImageView
            android:id="@+id/iv_uploaded_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:contentDescription="Uploaded Image Preview" />
        <!-- Create Button -->
        <Button
            android:id="@+id/button_create_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Hotel"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white" />
    </LinearLayout>

</ScrollView>