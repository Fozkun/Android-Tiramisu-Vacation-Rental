<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewHotelRoom"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/homepage_card_bg"
                tools:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_shape_black"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textViewHotelRoomName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Room name"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_2"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewHotelRoomDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Description"
                    android:textColor="@color/text_color_2" />

                <TextView
                    android:id="@+id/textViewHotelRoomPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Price"
                    android:textColor="@color/text_color_2" />

                <TextView
                    android:id="@+id/textViewHotelRoomStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Start date"
                    android:textColor="@color/text_color_2" />

                <TextView
                    android:id="@+id/textViewHotelRoomEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="End date"
                    android:textColor="@color/text_color_2" />


                <TextView
                    android:id="@+id/textViewHotelRoomStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Status"
                    android:textColor="@color/text_color_2" />

                <Button
                    android:id="@+id/btnBookHotelRoom"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/accent_color"
                    android:text="Book now"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnShowEditHotelRoomForm"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray"
                    android:text="Edit"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layoutEditHotelRoomForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/border_shape_black"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textViewForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit room"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewCreateHotelRoomName"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Name" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLayoutHotelRoomName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/InputRoomName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Room Name" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewCreateRoomDescription"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Description" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLayoutHotelRoomDescription"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/InputRoomDetails"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Room Description" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewCreateHotelRoomPrice"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Price" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLayoutHotelRoomPrice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/InputRoomPrice"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Room Price" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewCreateHotelRoomStartDate"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Start Date" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLayoutHotelRoomStartDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/InputStartDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Room Start Date" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewCreateHotelRoomEndDate"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="End Date" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLayoutHotelRoomEndDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/InputEndDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Room End Date" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewCreateHotelRoomStatus"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Status" />

                        <Button
                            android:id="@+id/btnChangeHotelRoomStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/gray"
                            android:text="Current status" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSaveHotelRoom"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:backgroundTint="@color/gray"
                        android:text="Save" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnDeleteHotelRoom"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E53935"
                    android:text="Delete"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>