<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomepageActivity">


    <!-- Bottom Navigation -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="550dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Card Background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/homepage_card_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="50dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/logo"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:shadowColor="@color/icon_color_1_shadow"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:src="@drawable/homepage_icon_backpack" />

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:shadowColor="@color/text_color_1_shadow"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:text="Tiramisu"
                                android:textAlignment="center"
                                android:textColor="@color/text_color_1"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:shadowColor="@color/text_color_1_shadow"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:text="-Hotel Rental"
                                android:textAlignment="textEnd"
                                android:textColor="@color/text_color_1"
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="-40dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/homepage_rounded_layout"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/title3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:shadowColor="@color/text_color_1_shadow"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:text="Explore Booking Hotels"
                                android:textColor="@color/text_color_1"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/homepage_rounded_form"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <ImageView
                                        android:id="@+id/imageView"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitXY"
                                        tools:srcCompat="@drawable/homepage_icon_location" />

                                    <EditText
                                        android:id="@+id/editTextFindHotelWhere"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="Where you want to go?"
                                        tools:textSize="14sp" />

                                </LinearLayout>

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:background="@drawable/homepage_rounded_form"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <ImageView
                                        android:id="@+id/imageView"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitXY"
                                        tools:srcCompat="@drawable/homepage_icon_calendar" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <EditText
                                                android:id="@+id/editTextFindHotelStartDate"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:hint="DD-MM-YYYY"
                                                tools:textSize="14sp" />

                                            <TextView
                                                android:id="@+id/textView4"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Start Day"
                                                android:textSize="10sp" />
                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/textView3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="->" />

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <EditText
                                                android:id="@+id/editTextFindHotelEndDate"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:hint="DD-MM-YYYY"
                                                tools:textSize="14sp" />

                                            <TextView
                                                android:id="@+id/textView5"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="End Day"
                                                android:textSize="10sp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/homepage_rounded_form"
                                    android:gravity="center|start"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                    <ImageView
                                        android:id="@+id/imageView"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginEnd="5dp"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitXY"
                                        tools:srcCompat="@drawable/homepage_icon_people" />

                                    <TextView
                                        android:id="@+id/textViewFindHotelRoomAdults"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1 Room,  1 Adult"
                                        android:textColor="@color/text_color_1_shadow" />

                                </LinearLayout>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <Button
                                    android:id="@+id/btnShowCreateHotelForm"
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"
                                    android:backgroundTint="@color/blue"
                                    android:shadowColor="@color/card_1_shadow"
                                    android:shadowDx="0.5"
                                    android:shadowDy="0.5"
                                    android:shadowRadius="3.0"
                                    android:text="Create Hotel"
                                    android:textColor="@color/icon_color_1"
                                    android:visibility="gone" />

                                <Button
                                    android:id="@+id/button"
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"
                                    android:backgroundTint="@color/accent_color"
                                    android:shadowColor="@color/card_1_shadow"
                                    android:shadowDx="0.5"
                                    android:shadowDy="0.5"
                                    android:shadowRadius="3.0"
                                    android:text="Find"
                                    android:textColor="@color/icon_color_1" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutCreateHotelForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_shape_black"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="gone">

                        <!-- Hotel Name -->
                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Create hotel form"
                            android:textColor="@color/text_color_2"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="4dp"
                            android:text="Hotel Name"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_hotel_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter hotel name"
                            android:inputType="text"
                            android:minHeight="48dp" />

                        <!-- Address -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:paddingBottom="4dp"
                            android:text="Address"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_hotel_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter hotel address"
                            android:inputType="textPostalAddress"
                            android:minHeight="48dp" />

                        <!-- Location (latitude & longitude) -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:paddingBottom="4dp"
                            android:text="Location (Latitude and Longitude)"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_latitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Latitude"
                            android:inputType="number|numberDecimal|numberSigned"
                            android:minHeight="48dp" />

                        <EditText
                            android:id="@+id/editText_longitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Longitude"
                            android:inputType="number|numberDecimal|numberSigned"
                            android:minHeight="48dp" />

                        <TextView
                            android:id="@+id/latLngFinderHyperLink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/LatitudeLongitudeFinder"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <!-- Max Occupancy -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:paddingTop="16dp"
                            android:paddingBottom="4dp"
                            android:text="Max Occupancy"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editText_max_occupancy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter maximum occupancy"
                            android:inputType="number"
                            android:minHeight="48dp" />

                        <!-- Rating -->

                        <!-- Upload Image Button -->
                        <Button
                            android:id="@+id/btnUploadHotelImage"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/gray"
                            android:text="Upload Image" />

                        <ImageView
                            android:id="@+id/iv_uploaded_image"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp"
                            android:contentDescription="Uploaded Image Preview"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />
                        <!-- Create Button -->
                        <Button
                            android:id="@+id/btnCreateHotel"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/accent_color"
                            android:text="Create"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Popular Choices"
                            android:textColor="@color/text_color_2"
                            android:textSize="34sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewHotelCard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:baselineAligned="false"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/homeButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Home"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Home"
                    android:textColor="#007BFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Coupons -->
            <LinearLayout
                android:id="@+id/nav_coupons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/couponsButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Coupons"
                    android:src="@drawable/ic_coupons" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Coupons"
                    android:textColor="#757575"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Trips -->
            <LinearLayout
                android:id="@+id/nav_myTrips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tripsButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Trips"
                    android:src="@drawable/ic_trips" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="My Trips"
                    android:textColor="#757575"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Notifications -->
            <LinearLayout
                android:id="@+id/nav_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/notificationsButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Notifications"
                    android:src="@drawable/ic_notifications" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Notification"
                    android:textColor="#757575"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profileButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Profile"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Profile"
                    android:textColor="#757575"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#00FFFFFF"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:srcCompat="@android:drawable/sym_action_chat" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87" />

</androidx.constraintlayout.widget.ConstraintLayout>